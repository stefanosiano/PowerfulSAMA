<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Attributes of the SamaRecyclerView.
        For more informations visit https://github.com/stefanosiano/PowerfulSama -->
    <declare-styleable name="SamaRecyclerView">

        <!-- Sets the number of columns of the recyclerView: if 1 -> LinearLayoutManager is used. If higher, GridLayoutManager is used -->
        <attr name="srvColumns" format="integer" />

        <!-- Sets whether the recyclerView should put items horizontally (using a linearLayoutManager) -->
        <attr name="srvHorizontal" format="boolean" />

        <!-- Sets whether to use a workaround for the inconsistencyDetected: IndexOutOfBoundsException (Only when using srv_columns). See https://stackoverflow.com/questions/31759171/recyclerview-and-java-lang-indexoutofboundsexception-inconsistency-detected-in/33822747#33822747 -->
        <attr name="srvInconsistencyWorkaround" format="boolean" />


    </declare-styleable>
</resources>