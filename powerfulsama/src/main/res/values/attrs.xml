<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Attributes of the SamaRecyclerView.
        For more informations visit https://github.com/stefanosiano/PowerfulSama -->
    <declare-styleable name="SamaSearchView">

        <!-- Sets whether to clear focus when submitting the query, to close the keyboard automatically -->
        <attr name="ssvClearFocusOnSubmit" format="boolean" />
        <attr name="ssvMillis" format="integer" />
        <attr name="ssvQuery" format="string" />
        <attr name="ssvSuggestionLayout" format="reference" />
    </declare-styleable>

    <!-- Attributes of the SamaRecyclerView.
        For more informations visit https://github.com/stefanosiano/PowerfulSama -->
    <declare-styleable name="SamaRecyclerView">

        <!-- Sets the number of columns of the recyclerView: if 1 -> LinearLayoutManager is used. If higher, GridLayoutManager is used -->
        <attr name="srvColumns" format="integer" />

        <!-- Sets whether the recyclerView should put items horizontally (using a linearLayoutManager) -->
        <attr name="srvHorizontal" format="boolean" />

        <!-- Sets whether to use a workaround for the inconsistencyDetected: IndexOutOfBoundsException (Only when using srv_columns). See https://stackoverflow.com/questions/31759171/recyclerview-and-java-lang-indexoutofboundsexception-inconsistency-detected-in/33822747#33822747 -->
        <attr name="srvInconsistencyWorkaround" format="boolean" />

        <!-- Sets whether to use a workaround for the inconsistencyDetected: IndexOutOfBoundsException (Only when using srv_columns). See https://stackoverflow.com/questions/31759171/recyclerview-and-java-lang-indexoutofboundsexception-inconsistency-detected-in/33822747#33822747 -->
        <attr name="srvDisableAdapterAutoStop" format="boolean" />

        <!-- Sets whether to remove the adapter from the RecyclerView when it is detached from the layout -->
        <attr name="srvAutoDetach" format="boolean" />

        <!-- Sets whether to disable the predictive animation. Useful when items are changed and take some time to reload the adapter. Used only with srvInconsistencyWorkaround. Reduces (or removes) inconsistency exceptions -->
        <attr name="srvDisablePredictiveAnimation" format="boolean" />

    </declare-styleable>

    <declare-styleable name="BigDecimalEditText">
        <!-- Sets the locale used to show the number -->
        <attr name="bdetLocale" format="enum" >
            <enum name="current" value="0"/>
            <enum name="us" value="1"/>
        </attr>

        <!-- Sets minimum fractional digits to use -->
        <attr name="bdetMinFractionDigits" format="integer" />

        <!-- Sets maximum fractional digits to use -->
        <attr name="bdetMaxFractionDigits" format="integer" />
    </declare-styleable>

    <declare-styleable name="BigDecimalTextView">
        <!-- Sets the locale used to show the number -->
        <attr name="bdtvLocale" format="enum" >
            <enum name="current" value="0"/>
            <enum name="us" value="1"/>
        </attr>

        <!-- Sets minimum fractional digits to use -->
        <attr name="bdtvMinFractionDigits" format="integer" />

        <!-- Sets maximum fractional digits to use -->
        <attr name="bdtvMaxFractionDigits" format="integer" />
    </declare-styleable>

</resources>